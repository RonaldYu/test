{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {},
    "variables": {
        "scheduledqueryrules_alert_rule_name": "hklife-nprd-dev-aipil-datapipe-overallorch-fail-alert1",
        "loganalytics_wksp_externalid": "/subscriptions/3050bf26-d2fe-471c-a7ab-d325a5530c90/resourceGroups/test-rg/providers/Microsoft.OperationalInsights/workspaces/test-loganalytics-wksp",
        "resource_group_name": "test-rg",
        "deployment_name": "hklife-nprd-dev-aipil-datapipe-overallorch-fail-alert1"
    },
    "resources": [
        {
            "type": "microsoft.insights/scheduledqueryrules",
            "apiVersion": "2025-01-01-preview",
            "name": "[variables('scheduledqueryrules_alert_rule_name')]",
            "location": "eastus",
            "kind": "LogAlert",
            "properties": {
                "displayName": "[variables('scheduledqueryrules_alert_rule_name')]",
                "description": "The alert rule for overall orchestration failure",
                "severity": 1,
                "enabled": true,
                "evaluationFrequency": "PT2H",
                "scopes": [
                    "[variables('loganalytics_wksp_externalid')]"
                ],
                "targetResourceTypes": [
                    "Microsoft.OperationalInsights/workspaces"
                ],
                "windowSize": "PT2H",
                "criteria": {
                    "allOf": [
                        {
                            "query": "ADFPipelineRun\n| where Annotations has \"aipil\"\n    and Annotations has \"data-pipe\"\n    and Annotations has \"pipeline-orchestration\"\n    and Status == \"Failed\"\n\n",
                            "timeAggregation": "Count",
                            "dimensions": [],
                            "resourceIdColumn": "_ResourceId",
                            "operator": "GreaterThan",
                            "threshold": 0,
                            "failingPeriods": {
                                "numberOfEvaluationPeriods": 2,
                                "minFailingPeriodsToAlert": 1
                            }
                        }
                    ]
                },
                "autoMitigate": false,
                "actions": {
                    "actionGroups": [
                        "/subscriptions/3050BF26-D2FE-471C-A7AB-D325A5530C90/resourceGroups/test-rg/providers/microsoft.insights/actionGroups/test-adf-group"
                    ],
                    "customProperties": {},
                    "actionProperties": {
                        "Email.Subject": "Dev AI PIL Data Pipe Overall Orchestration Failure"
                    }
                }
            }
        }
    ]
}